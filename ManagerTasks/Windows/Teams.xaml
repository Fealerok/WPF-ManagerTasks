<Window x:Class="ManagerTasks.Windows.Teams"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerTasks.Windows"
        mc:Ignorable="d"
        Title="Teams" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Add Team" Margin="10" Click="AddTeamButton_Click"/>
            <Button Content="Edit Team" Margin="10" Click="EditTeamButton_Click"/>
            <Button Content="Delete Team" Margin="10" Click="DeleteTeamButton_Click"/>
            <Button Content="Back to Tasks" Margin="10" Click="BackToTasksButton_Click"/>
        </StackPanel>
        <DataGrid x:Name="TeamsGrid" AutoGenerateColumns="False" CanUserAddRows="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Members" Binding="{Binding Users.Count}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
