<Window x:Class="ManagerTasks.Windows.PersonalAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerTasks.Windows"
        mc:Ignorable="d"
        Title="Личный кабинет" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Информация о пользователе -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Логин:" FontWeight="Bold" Margin="0,0,5,0"/>
            <Label x:Name="UsernameLabel" Content="{Binding Username}"/>
            <Label Content="Email:" FontWeight="Bold" Margin="10,0,5,0"/>
            <Label x:Name="EmailLabel" Content="{Binding Email}"/>
        </StackPanel>

        <Button Grid.Row="1" Height="20" Content="Восстановить пароль" HorizontalContentAlignment="Center" Width="130" HorizontalAlignment="Left" Click="Button_Click"></Button>
        <!-- Список задач -->
        <Label Content="Мои задачи:" Grid.Row="2" FontWeight="Bold" Margin="0,10,0,5"/>
        <DataGrid x:Name="TasksGrid" Grid.Row="4" AutoGenerateColumns="False" CanUserAddRows="False" CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" CanUserSort="True"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" CanUserSort="True"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat={}{0:yyyy-MM-dd}}" CanUserSort="True"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status.Name}" CanUserSort="True"/>
                <DataGridTextColumn Header="Project" Binding="{Binding Project.Name}" CanUserSort="True"/>
                <DataGridTextColumn Header="Team" Binding="{Binding Team.Name}" CanUserSort="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
