<Window x:Class="ManagerTasks.Windows.Project"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerTasks.Windows"
        mc:Ignorable="d"
        Title="Projects" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Add Project" Margin="10" Click="AddProjectButton_Click"/>
            <Button Content="Edit Project" Margin="10" Click="EditProjectButton_Click"/>
            <Button Content="Delete Project" Margin="10" Click="DeleteProjectButton_Click"/>
            <Button Content="Back to Tasks" Margin="10" Click="BackToTasksButton_Click"/>
        </StackPanel>
        <DataGrid x:Name="ProjectsGrid" AutoGenerateColumns="False" CanUserAddRows="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

