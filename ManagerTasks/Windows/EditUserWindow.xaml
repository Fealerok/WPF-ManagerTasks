<Window x:Class="ManagerTasks.Windows.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerTasks.Windows"
        mc:Ignorable="d"
        Title="Edit User" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Full Name -->
        <Label Content="Full Name:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="FullNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding FullName}"/>

        <!-- Email -->
        <Label Content="Email:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding Email}"/>

        <!-- Username -->
        <Label Content="Username:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding Username}"/>

        <!-- Role -->
        <Label Content="Role:" Grid.Row="3" Grid.Column="0" Margin="5"/>
        <ComboBox x:Name="RoleComboBox" Grid.Row="3" Grid.Column="1" Margin="5" 
                  DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding RoleId}"/>

        <!-- Team -->
        <Label Content="Team:" Grid.Row="4" Grid.Column="0" Margin="5"/>
        <ComboBox x:Name="TeamComboBox" Grid.Row="4" Grid.Column="1" Margin="5" 
                  DisplayMemberPath="Name" SelectedValuePath="Id" SelectedValue="{Binding TeamId}"/>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>