<Window x:Class="ManagerTasks.Windows.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerTasks.Windows"
        mc:Ignorable="d"
        Title="Authorization" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10" />
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Login" Width="100" Click="LoginButton_Click"/>
            <Button Content="Register" Width="100" Margin="0,10,0,0" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
