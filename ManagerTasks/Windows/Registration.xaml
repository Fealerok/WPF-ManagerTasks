<Window x:Class="ManagerTasks.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerTasks.Windows"
        mc:Ignorable="d"
        Title="Registration" Height="300" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Text="Полное ФИО" Width="200" Margin="0,0,0,10" BorderThickness="0" IsReadOnly="True"/>
            <TextBox x:Name="FullNameTextBox" Width="200" Margin="0,0,0,10"/>
            
            <TextBox Text="Почта" Width="200" Margin="0,0,0,10" BorderThickness="0" IsReadOnly="True"/>
            <TextBox x:Name="EmailTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBox Text="Логин" Width="200" Margin="0,0,0,10" BorderThickness="0" IsReadOnly="True"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBox Text="Пароль" Width="200" Margin="0,0,0,10" BorderThickness="0" IsReadOnly="True"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Register" Width="100" Click="RegisterButton_Click"/>
            <Button Content="Back to Login" Width="100" Margin="0,10,0,0" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
