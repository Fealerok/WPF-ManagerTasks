<Window x:Class="ManagerTasks.Windows.Tasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerTasks.Windows"
        mc:Ignorable="d"
        Title="Tasks" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Добавить задачу" Margin="10" Click="AddTaskButton_Click"/>
            <Button Content="Редактировать задачу" Margin="10" Click="EditTaskButton_Click"/>
            <Button Content="Удалить задачу" Margin="10" Click="DeleteTaskButton_Click"/>
            <Button Content="Проекты" Margin="10" Click="ProjectButton_Click"/>
            <Button Content="Команды" Margin="10" Click="TeamsButton_Click"/>
            <Button Content="Пользователи" Name="UsersButton" Margin="10" Click="UsersButton_Click"/>
            <Button Content="Личный кабинет" Margin="10" Click="PersonalAccountButton_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <Label Content="Фильтр:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox x:Name="FilterComboBox" Width="200" Margin="5">
                <ComboBoxItem Content="По статусу"/>
                <ComboBoxItem Content="По дате"/>
                <ComboBoxItem Content="По исполнителю"/>
                <ComboBoxItem Content="По проекту"/>
            </ComboBox>
            <ComboBox x:Name="FilterValueComboBox" Width="200" Margin="5" DisplayMemberPath="Name" SelectedValuePath="Id"/>
            <DatePicker x:Name="FilterDatePicker" Width="150" Margin="5" Visibility="Collapsed"/>
            <Button Content="Применить фильтр" Margin="5" Click="ApplyFilterButton_Click"/>
            <Button Content="Сбросить фильтр" Margin="5" Click="ResetFilterButton_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <Label Content="Поиск:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="5" TextChanged="SearchTextBox_TextChanged"/>
            <Button Content="Очистить поиск" Margin="5" Click="ClearSearchButton_Click"/>
        </StackPanel>
        <DataGrid x:Name="TasksGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserSortColumns="True" Grid.Row="3">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" CanUserSort="True"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" CanUserSort="True"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat={}{0:yyyy-MM-dd}}" CanUserSort="True"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status.Name}" CanUserSort="True"/>
                <DataGridTextColumn Header="Assigned User" Binding="{Binding AssignedUser.Username}" CanUserSort="True"/>
                <DataGridTextColumn Header="Project" Binding="{Binding Project.Name}" CanUserSort="True"/>
                <DataGridTextColumn Header="Team" Binding="{Binding Team.Name}" CanUserSort="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
