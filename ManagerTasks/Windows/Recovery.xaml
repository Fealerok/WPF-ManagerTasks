<Window x:Class="ManagerTasks.Windows.Recovery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagerTasks.Windows"
        mc:Ignorable="d"
        Title="Recovery" Height="250" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Width="200" Margin="0,0,0,10" IsReadOnly="True" Text="Логин" BorderThickness="0" />
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,10" />

            <TextBox Width="200" Margin="0,0,0,10" IsReadOnly="True" Text="Почта" BorderThickness="0" />
            <TextBox x:Name="EmailTextBox" Width="200" Margin="0,0,0,10" />

            <TextBox Width="200" Margin="0,0,0,10" IsReadOnly="True" Text="Новый пароль" BorderThickness="0" />
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,0,0,10"/>
            <Button Content="Восстановить" Width="140" Click="RecoveryButton_Click"/>
            <Button Content="Вернуться" Width="140" Margin="0,10,0,0" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
